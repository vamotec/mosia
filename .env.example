# Mosia项目环境变量配置示例
# 复制此文件为 .env 并修改相应值

# === 数据库配置 ===
DB_DEFAULT_URL=jdbc:postgresql://localhost:5432/mosia_dev
DB_DEFAULT_USER=mosia_user
DB_DEFAULT_PASSWORD=your_secure_password_here

# === Redis配置 ===
REDIS_HOST=localhost
REDIS_PORT=6379

# === Kafka配置 ===
KAFKA_BOOTSTRAP_SERVER=localhost:9092

# === JWT配置 ===
JWT_SECRET=your_jwt_secret_key_here_32_chars_min
JWT_EXPIRATION=86400

# === OAuth配置 ===
# GitHub OAuth
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

# Google OAuth  
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# === 邮件配置 ===
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# === 监控配置 ===
GRAFANA_PASSWORD=secure_grafana_password

# === 加密配置 ===
CRYPTO_SECRET=your_32_char_crypto_secret_key_here

# === 服务器配置 ===
SERVER_HOST=localhost
SERVER_PORT=3010
GRPC_PORT=9090

# === 环境标识 ===
ENVIRONMENT=development
LOG_LEVEL=INFO