# Copy this file to terraform.tfvars and update with your values

# AWS Configuration
aws_region = "us-west-2"
environment = "staging"

# VPC Configuration
vpc_cidr = "10.0.0.0/16"
private_subnets = ["10.0.1.0/24", "10.0.2.0/24", "10.0.3.0/24"]
public_subnets = ["10.0.101.0/24", "10.0.102.0/24", "10.0.103.0/24"]

# EKS Configuration
kubernetes_version = "1.28"

# Database Configuration
db_instance_class = "db.t3.micro"  # Use db.t3.small or larger for production
db_allocated_storage = 20
db_name = "mosia"
db_username = "mosia_user"
db_password = "your-secure-password-here"  # Change this!

# Redis Configuration
redis_node_type = "cache.t3.micro"  # Use cache.t3.small or larger for production